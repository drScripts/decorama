<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/background_papper"
    >

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:text="WELLCOME\nTO DECORAMAâ€¨\nAPPLICATION"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="3dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/decorama_logo"
        android:contentDescription="@string/decorama_logo"
        />
    <Button
        android:id="@+id/login_with_google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableStart="@drawable/google_logo"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button_background"
        android:text="@string/login_with_google"
        android:contentDescription="@string/login_with_google"
        />
</LinearLayout>












