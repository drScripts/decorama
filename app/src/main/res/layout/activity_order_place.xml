<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPlace"
    android:background="@drawable/background_papper"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Which Product\nYou Want To Buy ?"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/netflix_button"
        android:layout_width="200dp"
        android:layout_height="82dp"
        android:contentDescription="@string/netflix_logo"
        android:src="@drawable/netflix_logo"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="#0000"
        android:layout_marginTop="130dp"
        />
    <ImageButton
        android:id="@+id/youtube_button"
        android:layout_width="200dp"
        android:layout_height="82dp"
        android:contentDescription="@string/youtube_logo"
        android:src="@drawable/youtube_logo"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
</LinearLayout>